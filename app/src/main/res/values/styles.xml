<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/window_frame</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
    </style>

    <!-- 每一个 section的标题  24小时 今日详情 各种指数的标题 -->
    <style name="w_section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="todaydetail_info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="todaydetail_info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="todaydetail_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/w_text_primary</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="suggestion_brf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/w_text_primary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">112dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="suggestion_title" parent="@style/suggestion_brf">
        <item name="android:layout_marginLeft">56dp</item>
    </style>

    <style name="suggestion_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_centerVertical">false</item>
    </style>

    <style name="suggestion_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/w_divider_size</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/w_divider_secondary</item>
    </style>

    <style name="suggestion_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
